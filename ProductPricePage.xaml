<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashierExternal.ProductPricePage"
             Title="ProductPricePage">
 <ScrollView>
        <VerticalStackLayout 
            Spacing="20" 
            Padding="20"
            VerticalOptions="Center">

            <!-- Barcode Input -->
            <Entry 
                x:Name="BarcodeEntry"
                Placeholder="Enter Barcode Number"
                FontSize="16"
                HeightRequest="50"
                Keyboard="Numeric"
                HorizontalOptions="FillAndExpand" />

            <!-- Barcode Scanner Button -->
            <ImageButton  
                Source="barcode" 
                BackgroundColor="Transparent"
                HeightRequest="50"
                WidthRequest="50"
                HorizontalOptions="End"
                Clicked="OnBarcodeScanClicked" />

            <!-- Submit Button -->
            <Button  
                Text="Show Product Info"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="18"
                HeightRequest="50"
                CornerRadius="10"
                Clicked="OnSubmitClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>